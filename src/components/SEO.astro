---
import { SITE } from "../config";

const {
  title = SITE.TITLE,
  description = SITE.DESCRIPTION,
  image = SITE.Favicon,
  url = '',
} = Astro.props;

const site = import.meta.env.SITE || 'https://isaac.duckcloud.info';

// resolve image to an absolute URL that works in head
const resolveImage = (src: any) => {
  const fallback = `${site}/og-image.png`;
  const s = src || '';
  if (!s) return fallback;
  if (s.startsWith('http://') || s.startsWith('https://') || s.startsWith('//')) return s;
  if (s.startsWith('/')) return `${site}${s}`; // site-root absolute path -> full URL
  try {
    // try resolving relative to this component file (handles ../../assets/...)
    return new URL(s, import.meta.url).href;
  } catch {
    return `${site}/${s}`;
  }
};

const metaImage = resolveImage(image);
const favicon = SITE.Favicon;
---
<head>
  <title>{title}</title>
  <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={metaImage} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={url || site} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={metaImage} />
  <link rel="icon" href={SITE.Favicon} type="image/svg+xml" />
</head>