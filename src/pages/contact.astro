---
import MainLayout from '../layouts/MainLayout.astro';
import SEO from '../components/SEO.astro';
---
<MainLayout>
  <SEO title="Contact — Isaac Talb" description="Get in touch with Isaac for projects and collaboration." />

  <section class="py-12">
    <h1 class="text-2xl font-bold">Contact</h1>

    <p class="mt-4 text-gray-600">
      Email: <a href="mailto:thaungahlaybaw@gmail.com">thaungahlaybaw@gmail.com</a>
    </p>
    <p class="mt-4 text-gray-700">
      You can also reach me faster on Telegram — messages sent through this form will be forwarded directly to my Telegram inbox for quicker communication.
    </p>

    <p class="mt-6 font-medium">Send me a message:</p>

    <form 
      action="https://formspree.io/f/xkgdzwpr" 
      method="POST" 
      class="mt-4 max-w-xl"
    >
      <!-- Redirect to thank you page -->
      <input type="hidden" name="_redirect" value="https://isaactalb.dev/thank-you" />

      <label class="block">
        Name
        <input 
          name="name" 
          required
          class="w-full border px-3 py-2 mt-2 rounded" 
        />
      </label>

      <label class="block mt-3">
        Email
        <input 
          name="email" 
          type="email" 
          required
          class="w-full border px-3 py-2 mt-2 rounded" 
        />
      </label>

      <label class="block mt-3">
        Message
        <textarea 
          name="message" 
          rows="5" 
          required
          class="w-full border px-3 py-2 mt-2 rounded"
        ></textarea>
      </label>

      <button 
        class="mt-4 inline-block px-6 py-2 bg-black text-white rounded hover:bg-gray-800 transition" 
        type="submit"
      >
        Send Message
      </button>
    </form>
  </section>
</MainLayout>
