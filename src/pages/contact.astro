---
import MainLayout from '../layouts/MainLayout.astro';
// import SEO from '../components/SEO.astro';
import { CONTACT } from '../config';
---
<MainLayout metadata={CONTACT}>
  <section class="py-12">
    <h1 class="text-2xl font-bold">Contact</h1>

    <p class="mt-4 text-gray-600">
      Email: <a href="mailto:isaac@duckcloud.info">isaac@duckcloud.info</a>
    </p>
    <p class="mt-4 text-gray-700">
      You can also reach me faster on Telegram â€” messages sent through this form will be forwarded directly to my Telegram inbox for quicker communication.
    </p>

    <p class="mt-6 font-medium">Send me a message:</p>

    <form action="/api/send-message" method="POST" class="mt-4 max-w-xl">
      <label class="block">
        Name
        <input name="name" required class="w-full border px-3 py-2 mt-2 rounded" />
      </label>

      <label class="block mt-3">
        Email
        <input name="email" type="email" required class="w-full border px-3 py-2 mt-2 rounded" />
      </label>

      <label class="block mt-3">
        Message
        <textarea name="message" rows="5" required class="w-full border px-3 py-2 mt-2 rounded"></textarea>
      </label>

      <button type="submit" class="mt-4 inline-block px-6 py-2 bg-black text-white rounded hover:bg-gray-800 transition">
        Send Message
      </button>
    </form>

  </section>
</MainLayout>
